<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="15dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_poster"
            android:layout_height="280dp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:scaleType="fitXY"

            />
        <ImageButton
            android:id="@+id/ib_favourite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_favorite_fill"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:visibility="gone"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/iv_poster"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/iv_poster"
        android:layout_alignEnd="@+id/iv_poster"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="#BB000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:text="Title"
                android:maxLength="15"
                android:textSize="15sp"
                android:textStyle="bold"
                android:ellipsize="end"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tv_rating_movie_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:text="-"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/ic_star"
                />

        </LinearLayout>

        </LinearLayout>




</android.support.v7.widget.CardView>